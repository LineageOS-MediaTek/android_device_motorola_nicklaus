    chmod 0771 /persist

    mkdir /data/nfc 0770 nfc nfc
    chown nfc nfc /data/nfc
    chmod 0770 /data/nfc
	
    # jijin.wang restorecon /persist to set SEPolicy label.
    restorecon /persist
    # lenovo sw zhangpei5 20170223 save log in /persist/simlock
    mkdir /persist/simlock 0775 system mot_tcmd
    chown radio mot_tcmd /persist/simlock
    chmod 0775 /persist/simlock

    #restore necessary files into data partition
    mkdir /data/thh 0770 root root
    mkdir /data/thh/tee_00 0770 root root
    copy /cache/thh/tee_00/thh_mt6737_motoe4plus.certs /data/thh/tee_00/thh_mt6737_motoe4plus.certs
    copy /cache/thh/tee_00/thh_mt6737_motoe4plus.cfg /data/thh/tee_00/thh_mt6737_motoe4plus.cfg
    mkdir /data/local 0751 root root
    mkdir /data/local/tmp 0771 shell shell
    copy /cache/local/tmp/thh_mt6737_motoe4plus.cfg /data/local/tmp/thh_mt6737_motoe4plus.cfg


